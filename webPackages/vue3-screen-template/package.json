{
  "name": "vue3-screen-template",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite --mode dev --host",
    "dev:test": "vite --mode test --host",
    "dev:prod": "vite --mode prod --host",
    "build": "vite --mode prod build",
    "build:dev": "vite --mode dev build",
    "build:test": "vite --mode test build",
    "preview": "vite preview --host",
    "lint": "eslint src --ext .js,.ts",
    "format": "prettier --write src",
    "mirror:get": "npm config get registry",
    "mirror:set": "npm config set registry https://registry.npmmirror.com",
    "mirror:rm": "npm config rm registry",
    "backup": "git add . && git commit -m \"chore: backup\" && git push",
    "up": "npx npm-check-updates -u",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@bassist/progress": "^0.2.1",
    "@bassist/utils": "^0.11.2",
    "axios": "^1.4.0",
    "pinia": "^2.0.33",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@LT/components": "workspace:^",
    "@LT/utils": "workspace:^",
    "@element-plus/icons-vue": "^2.1.0",
    "@vitejs/plugin-vue": "^4.1.0",
    "element-plus": "^2.3.6",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.9.0",
    "less": "^4.1.3",
    "lint-staged": "^13.2.0",
    "mockjs": "^1.1.0",
    "prettier": "^2.8.6",
    "simple-git-hooks": "^2.8.1",
    "unplugin-auto-import": "^0.16.4",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.2.1",
    "vite-plugin-banner": "^0.7.0",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-mock": "2.9.6",
    "vite-plugin-vue-setup-extend": "^0.4.0",
    "vite-plugin-windicss": "^1.9.0",
    "windicss": "^3.5.6"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --concurrent false"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">= 16.x.x",
    "pnpm": "8.x"
  }
}
